tmux_conf_theme_terminal_title="🥵 #S - #W"
tmux_conf_theme_prefix_fg="#ffffff"
tmux_conf_theme_pairing_fg="#ffffff"

set-option -g prefix M-b
set -g prefix2 M-b
tmux_conf_copy_to_os_clipboard=true
set -g default-terminal "tmux-256color"
set-option -ga terminal-overrides ",*256col*:Tc" # 这句是关键
set-option -sg escape-time 50 # esc 键延迟，设置 0 的话 Ubuntu 20.04 会出现奇怪字符
set-window-option -g mode-keys vi
bind -T copy-mode-vi y send-keys -X copy-pipe-and-cancel 'xclip -in -selection clipboard'
bind -T copy-mode-vi v send-keys Space
set-option -g focus-events on
set -g mouse on
bind -n C-l send-keys C-l
set -g history-limit 250000
