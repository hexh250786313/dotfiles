  "diagnostic-languageserver.formatters": {
    "prettierd": {
      "command": "prettierd",
      "args": ["%filename"],
      "rootPatterns": ["package.json"],
      "isStdout": true,
      "isStderr": true
    },
    "nginxfmt": {
      "command": "nginxfmt",
      "args": ["-p", "-"],
